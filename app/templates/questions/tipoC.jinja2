{% extends "base.jinja2" %}

{% block content %}

{# <div class="column is-4 is-offset-4"> #}
    <h3 class="title">Add multiple choice question</h3>
    <div class="box">
                <form method="POST" action="">
            <div class="field">
                <div class="control">
                    Command
                    <textarea class="textarea is-medium " name = "command" placeholder="command" autofocus=""></textarea>
                </div>
            </div>
        
            <div class = 'field'>
            <div class = 'control' > Option A
            <input class="input is-small" type="text" name="optA" placeholder="Option A" >
            </div>
        </div>
        <div class = 'field'>
            <div class = 'control' > Option B
            <input class="input is-small" type="text" name="optB" placeholder="Option B" >
            </div>
        </div>
        <div class = 'field'>
            <div class = 'control' > Option C
            <input class="input is-small" type="text" name="optC" placeholder="Option C" >
            </div>
        </div>
        <div class = 'field'>
            <div class = 'control' > Option D
            <input class="input is-small" type="text" name="optD" placeholder="Option D" >
            </div>
        </div>
        <div class = 'field'>
            <div class = 'control' > Option E
            <input class="input is-small" type="text" name="optE" placeholder="Option E" >
            </div>
        </div>
        <br>

        <div class = 'field'>
            <div class = 'control' > Answer
            <input class="input is-small" type="text" name="answer" placeholder="Answer" >
            </div>
        </div>
             <br> 
        <div class = 'field'>
            <div class = 'control' > Value
            <input class="input is-small" type="float" name="value" placeholder="Value" >
            </div>
        </div>
    <br>

            <button class="button is-block is-info is-medium is-responsive">Add</button>
        </form>
    </div>
{# </div> #}
{% endblock %}