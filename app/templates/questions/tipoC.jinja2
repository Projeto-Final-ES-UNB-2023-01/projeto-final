{% extends "base.jinja2" %}

{% block content %}
    <h3 class="title">Add multiple choice question</h3>
    <div class="box">
        <form method="POST" action="">
            <div class="field">
                <div class="control"> Command
                    <label for="cmd"></label>
                    <textarea class="textarea is-medium" id="cmd" name="command" placeholder="command"
                              autofocus=""></textarea>
                </div>
            </div>
            <div class='field'>
                <div class='control'> Option A
                    <label for="optA"></label>
                    <input class="input is-small" type="text" id="optA" name="optA" placeholder="Option A">
                </div>
            </div>
            <div class='field'>
                <div class='control'> Option B
                    <label for="optB"></label>
                    <input class="input is-small" type="text" id="optB" name="optB" placeholder="Option B">
                </div>
            </div>
            <div class='field'>
                <div class='control'> Option C
                    <label for="optC"></label>
                    <input class="input is-small" type="text" id="optC" name="optC" placeholder="Option C">
                </div>
            </div>
            <div class='field'>
                <div class='control'> Option D
                    <label for="optD"></label>
                    <input class="input is-small" type="text" id="optD" name="optD" placeholder="Option D">
                </div>
            </div>
            <div class='field'>
                <div class='control'> Option E
                    <label for="optE"></label>
                    <input class="input is-small" type="text" id="optE" name="optE" placeholder="Option E">
                </div>
            </div>
            <br>
            <div class='field'>
                <div class='control'> Answer
                    <label for="ans"></label>
                    <input class="input is-small" type="text" id="ans" name="answer" placeholder="Answer">
                </div>
            </div>
            <br>
            <div class='field'>
                <div class='control'> Value
                    <label for="val"></label>
                    <input class="input is-small" type="number" step="0.1" id="val" name="value" placeholder="Value">
                </div>
            </div>
            <br>
            <button class="button is-block is-info is-medium is-responsive">Add</button>
        </form>
    </div>
{% endblock %}